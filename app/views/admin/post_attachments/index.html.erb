<p id="notice"><%= notice %></p>

<h1>Listing Post Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Post carouselimage</th>
      <th>Post carouselcontent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_attachments.each do |post_attachment| %>
      <tr>
        <td><%= post_attachment.post_id %></td>
        <td><%= image_tag post_attachment.post_carouselimage.thumb.url %></td>
        <td><%= post_attachment.post_carouselcontent %></td>
        <td><%= link_to 'Show', [:admin,post_attachment] %></td>
        <td><%= link_to 'Edit', edit_admin_post_attachment_path(post_attachment) %></td>
        <td><%= link_to 'Destroy', [:admin ,post_attachment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post attachment', new_admin_post_attachment_path %>
