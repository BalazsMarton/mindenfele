<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @post.image.contentimg.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw @post.content.html_safe %>
</p>
<p>
	<strong>Category:</strong>
	<%= @post.category && @post.category.name %>
</p>
